{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "module": "CommonJS",

        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,

        "target": "ES5",
        "noEmit": true,
        "rootDir": "./script"
    },
    "include": ["./script"]
}
